<!DOCTYPE html>
<html lang="en">

<head>
  <%- include(info_pagina.subir_a_raiz + 'header.ejs') %>
</head>

<body>

  <style>
    .contenedor-head {
      position: relative;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      animation: degradadoFondo 15s infinite alternate ease;
      background: linear-gradient(90deg,  hsl(195, 100%, 20%) 0%, rgba(0,0,0,0) 50%, hsl(210, 100%, 25%) 100%);
      background-size: 300% 100%;

      .degradado-a-negro{
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to bottom, transparent, #121212);
        z-index: -1;
      }

      .experiencia {
        color: deeppink;
      }

      .head {
        z-index: 2;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
        padding: 20px;

        .textos {
          margin: 20px;

          .enfasis {
            font-size: 30px;
            font-weight: bold;
            color: dodgerblue;
            text-shadow: -1px 1px 2px black;
          }
        }

        .logo {
          width: 150px;
          height: 150px;
          animation: borderlogo 30s infinite alternate;
        }
      }
    }

    .logo-acordion {
      width: 150px;
      height: 150px;
      margin: 0 10px;
      object-fit: contain;
      border-radius: 5px;
      padding: 10px;
    }

    @keyframes degradadoFondo {
      0% {
        background-position: 0% 50%;
      }

      100% {
        background-position: 100% 50%;
      }
    }

    @keyframes borderlogo {
      0% {
        border: 4px solid cyan;
        border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%
      }

      12.5% {
        border-radius: 61% 39% 61% 39% / 61% 61% 39% 39%
      }

      25% {
        border-radius: 61% 39% 61% 39% / 39% 61% 39% 61%
      }

      37.5% {
        border-radius: 39% 61% 61% 39% / 39% 39% 61% 61%
      }

      50% {
        border: 4px solid blue;
        border-radius: 76% 24% 37% 63% / 30% 69% 31% 70%
      }

      62.5% {
        border-radius: 76% 24% 76% 24% / 75% 25% 75% 25%
      }

      75% {
        border-radius: 32% 68% 70% 30% / 30% 30% 70% 70%
      }

      87.5% {
        border-radius: 32% 68% 70% 30% / 70% 30% 70% 30%
      }

      100% {
        border: 4px solid white;
        border-radius: 32% 68% 52% 48% / 39% 45% 55% 61%
      }
    }
  </style>

  <div class="App">
  </div>

  <script type="text/babel">
    class App extends React.Component {
                        render() {
                                return (
                                        <ThemeProvider theme={darkTheme}>
                                                <CssBaseline />
                                                <PrimeraVista />
                                        </ThemeProvider>
                                );

                                function PrimeraVista(){
                                        return (
                                                <div className="contenedor-head">
                                                        <div className={`
                                                                ${ifw('text-align', 'center', 'less', 600)}
                                                                head
                                                        `}>
                                                                <div class="degradado-a-negro">
                                                                </div>
                                                                <div className="textos">
                                                                        <div>
                                                                                Hola, Soy <b>Jeffrey Agudelo</b>,
                                                                        </div>
                                                                        <div className="enfasis">
                                                                                Desarrollador Web,
                                                                        </div>
                                                                        <div>
                                                                                Amo programar y aprender cosas nuevas.
                                                                                <br/>
                                                                                <br/>
                                                                                <span className="experiencia">
                                                                                        Más de <b>4 años</b> de experiencia.
                                                                                </span>
                                                                        </div>
                                                                        <br/>
                                                                        <Button color="primary" variant="outlined" href="/proyectos" startIcon={<i class="fa-solid fa-code"></i>}>
                                                                                Portafolio y Proyectos
                                                                        </Button>
                                                                        &nbsp;&nbsp;
                                                                        <Button color="primary" variant="contained" href="/resumen" startIcon={<i class="fa-regular fa-face-smile"></i>}>
                                                                                Resumen
                                                                        </Button>
                                                                </div>

                                                                <img src="https://i.ibb.co/wdzKPBQ/366554516-258394430415661-7517371829964237215-n.jpg" alt="logo" className="logo" />
                                                        </div>
                                                </div>
                                        );
                                }
                        }
                }
                ReactDOM.render(<App />, document.querySelector('.App'));

                updateResponsive();
        </script>
</body>

</html>